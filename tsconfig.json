{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "es2020",
    "sourceMap": true,
    "skipLibCheck": true,
    "allowJs": false,
    "rootDir": "src",
    "outDir": "dist",
    "jsx": "react-jsx",
    "esModuleInterop": true
  },
  "include": [".env", "src", "medusa-config.js", "package.json"],
  "exclude": ["dist", "node_modules", "**/*.spec.ts"]
}
